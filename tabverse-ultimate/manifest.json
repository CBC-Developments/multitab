{
  "manifest_version": 3,
  "name": "TabVerse Ultimate",
  "version": "3.0.0",
  "description": "Advanced multitasking overlay workspace - floating windows, AI assistant, and persistent layouts",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.js",
        "ai.js",
        "license.js",
        "widgets/*.js",
        "styles/overlay.css",
        "overlay.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Toggle TabVerse overlay"
    },
    "toggle-ai-assistant": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Toggle AI Assistant sidebar"
    }
  }
}
